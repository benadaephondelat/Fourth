@model IEnumerable<Courses.Web.Models.Customer.ViewModels.CustomerOrderDetailsGridViewModel>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.OrderSum).Titled("Order Sum without shipping");
        columns.Add(model => model.OrderSumWithFreight).Titled("Order Sum with shipping");
        columns.Add(model => model.ProductsCount).Titled("Order Products Count");
        columns.Add(model => model.PossibleProblem ? "Possible problem" : "No Possible Problem").Titled("Possible problem?");
    })
    .Pageable(pager =>
    {
        pager.PagesToDisplay = 5;
        pager.RowsPerPage = 10;
    })
    .Filterable()
    .Sortable()
    .Empty("No data found")
)
